<androidx.cardview.widget.CardView
        android:id="@+id/item_card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_text_4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_button_1_card_parent"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:minWidth="35dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <FrameLayout
                        android:id="@+id/item_button_1_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/follow">

                        <RelativeLayout
                            android:id="@+id/item_button_1_click_parent"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:minWidth="40dp">

                            <TextView
                                android:id="@+id/item_button_1_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLength="20"
                                android:minWidth="120dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:text="Follow"
                                android:textColor="@color/md_white_1000"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_button_2_card_parent"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:minWidth="35dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <FrameLayout
                        android:id="@+id/item_button_2_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/message">

                        <RelativeLayout
                            android:id="@+id/item_button_2_click_parent"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:minWidth="40dp">

                            <TextView
                                android:id="@+id/item_button_2_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLength="20"
                                android:minWidth="120dp"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:text="Message"
                                android:textColor="#0F0F0F"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/button_head_card_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_counter_card_parent"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <RelativeLayout
                                android:id="@+id/item_1_click_parent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/item_1_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/item_1_value"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:maxLength="20"
                                    android:text="Posts"
                                    android:textColor="#5B5A5F"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/item_1_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:maxLength="20"
                                    android:text="19"
                                    android:textColor="#131313"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/item_2_click_parent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/item_2_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/item_2_value"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:maxLength="20"
                                    android:text="Followers"
                                    android:textColor="#5B5A5F"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/item_2_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:maxLength="20"
                                    android:text="710"
                                    android:textColor="#131313"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/item_3_click_parent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/item_3_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/item_3_value"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:maxLength="20"
                                    android:text="Following"
                                    android:textColor="#5B5A5F"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/item_3_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:maxLength="20"
                                    android:text="219"
                                    android:textColor="#131313"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/item_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_text_1"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:lines="1"
                android:text="Android app Developer"
                android:textColor="#5B5A5F"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_text_2"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="YOUR BIO"
                android:textColor="#131313"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_text_3"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:lines="1"
                android:text="billooko2@gmail.com"
                android:textColor="#36618A"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_head_card_parent"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Bill Clinton Ooko"
                android:textColor="#131313"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/button_head_card_parent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:id="@+id/button_click_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button_body_card_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="39dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/button_image_card_parent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                app:cardBackgroundColor="@null"
                                app:cardCornerRadius="33dp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/button_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/AppRentMe" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
